<%=form_for @post do |f|%>
  <%=f.label :title, "Title:"%>
  <%=f.text_field :title%>
  <br>
  <%=f.label :content, "Content:"%>
  <br>
  <%=f.text_area :content%>
  <br>
  <%=f.label :category_ids, "Categories:"%>
  <br>
  <%=f.collection_check_boxes :category_ids, Category.all, :id, :name%>
  <br>
  <%=f.label :categories, "Other:"%>
  <%=f.fields_for :categories do |cat_fields|%>
    <%=cat_fields.text_field :name%>
    <br>
  <%end%>
  <br><br>
  <%=f.submit%>
<%end%>
